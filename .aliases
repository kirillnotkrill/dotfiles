# aliases
# mostly borrowed from OMZ
# 


# ---
# Navigation
# ---

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias /='cd /'
alias ~='cd ~'
alias -- -='cd -'


# ---
# Shortcuts
# ---

# General
alias c='clear'
alias cp='cp -iv'
alias mv='mv -iv'
alias e='exit'
alias du='du -sh *'
alias fd='find . -type d -name'
alias ff='find . -type f -name'
alias h='history'
alias htop-user='htop -u "$USER"'
alias rm='rm -i'
alias rmf='rm -rf'
alias uptime='uptime -p'
alias free='free -h'
alias preview='fzf --height=50% --layout=reverse --preview="bat --color=always {}"'

# exa - better ls
alias ls="exa -lbF --git"
alias l="exa"
alias ll="exa -lbGF --git"
alias llm="exa -lbGF --git --sort=modified"
alias la="exa -lbhHigUmuSa --time-style=long-iso --git --color-scale"
alias lx="exa -lbhHigUmuSa@ --time-style=long-iso --git --color-scale"
alias lS="exa -1"
alias lt="exa --tree --level=2"

# bat - better cat
alias cat='bat'


